{
  "manifest_version": 3,
  "name": "AI 文章改寫助手",
  "version": "1.0",
  "description": "使用 AI 技術自動改寫文章",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://data.uanalyze.twobitto.com/*",
    "https://pro.uanalyze.com.tw/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://data.uanalyze.twobitto.com/research-reports/*/edit*",
        "https://data.uanalyze.twobitto.com/research-reports/create"
      ],
      "js": [
        "default.js",
        "settings.js",
        "notification.js",
        "undo.js",
        "stock_list.js",
        "text-processor.js",
        "translate.js",
        "ui-manager.js",
        "text_highlight/highlight.js",
        "content.js"
      ],
      "css": ["content_script_uanalyze.css"]
    },
    {
      "matches": [
        "https://pro.uanalyze.com.tw/lab/*"
      ],
      "js": [
        "default.js",
        "settings.js",
        "text-processor.js",
        "ua_assistant/auto-click.js",
        "ua_assistant/key-points-summary.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["https://pro.uanalyze.com.tw/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16_blue.png",
      "48": "images/icon48_blue.png",
      "128": "images/icon128_blue.png"
    }
  },
  "icons": {
    "16": "images/icon16_blue.png",
    "48": "images/icon48_blue.png",
    "128": "images/icon128_blue.png"
  }
}
